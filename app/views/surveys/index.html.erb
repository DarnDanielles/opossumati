<p id="notice"><%= notice %></p>
<h1>Hello <%= Author.find_by(id: session[:user_id]).name %></h1><br>
<h1>My Surveys</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <% survey.author_id %>
        <% @survey_identity = survey.id %>
        <td><%= survey.title %></td>
        <td><%= survey.description %></td>
        <td><%= link_to 'Publish', take_survey_url(survey) %></td>
        <td><%= link_to 'See Results', answers_path(survey_id: survey.id) %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(id: survey.id) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_survey_path %>
<%= link_to 'Logout', logout_path, method: :delete %>
